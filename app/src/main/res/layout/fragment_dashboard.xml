<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:background="@color/colorPrimary"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="@dimen/_15sdp">
			
			<ImageView
				android:id="@+id/ivImage"
				android:layout_width="@dimen/_10sdp"
				android:layout_height="@dimen/_10sdp"
				android:background="@drawable/paris"
				android:contentDescription="@string/app_name" />
			
			
			<TextView
				android:id="@+id/editTextTextPersonName4"
				style="@style/text_dashboard_app_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:text="@string/english_grammar_lastname" />
			
			
			<TextView
				android:id="@+id/tvSubTitle"
				style="@style/text_dashboard_app_name_subtitle"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@+id/editTextTextPersonName4"
				android:layout_centerInParent="true"
				android:layout_marginBottom="@dimen/_26sdp"
				android:text="@string/learn_grammar_easily" />
		
		</RelativeLayout>
	</LinearLayout>
</androidx.core.widget.NestedScrollView>